<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memo_outline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_box"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/memo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLength="15"/>

    <TextView
        android:id="@+id/memo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/memo_title"
        app:layout_constraintTop_toBottomOf="@id/memo_title"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageButton
        android:id="@+id/memo_emptystar"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btnemptystar"
        android:padding="0dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/memo_title"
        app:layout_constraintBottom_toBottomOf="@id/memo_title"
        app:layout_constraintLeft_toRightOf="@id/memo_title"/>

    <ImageButton
        android:id="@+id/memo_fullstar"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btnfullstar"
        android:padding="0dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/memo_title"
        app:layout_constraintBottom_toBottomOf="@id/memo_title"
        app:layout_constraintLeft_toRightOf="@id/memo_title"/>

    <ImageButton
        android:id="@+id/memo_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btn_edit"
        android:padding="0dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/memo_delete"
        app:layout_constraintRight_toLeftOf="@id/memo_delete"/>

    <ImageButton
        android:id="@+id/memo_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:src="@drawable/btn_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>