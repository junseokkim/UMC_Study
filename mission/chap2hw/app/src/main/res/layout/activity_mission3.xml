<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="20"
    android:orientation="vertical"
    android:background="@color/youtube_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menubar_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="10dp"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/youtube_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3" />

                <ImageView
                    android:id="@+id/btn_find_device"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/find_device" />

                <ImageView
                    android:id="@+id/btn_subscribe1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/subscribe" />

                <ImageView
                    android:id="@+id/btn_search"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/search" />

                <ImageView
                    android:id="@+id/btn_profile"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/profile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:weightSum="7">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:minWidth="0dp"
                    android:minHeight="2dp"
                    android:text="탐색"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:minHeight="2dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="전체"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:minWidth="0dp"
                    android:minHeight="2dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="새로운 맞춤 동영상"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:minHeight="2dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="실시간"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:minHeight="1dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="게임"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/shorts" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/shorts1"
                        android:layout_width="180dp"
                        android:layout_height="350dp"
                        android:layout_weight="4.5"
                        android:scaleType="fitXY"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/shorts2"
                        android:layout_width="180dp"
                        android:layout_height="350dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/shorts3"
                        android:layout_width="180dp"
                        android:layout_height="350dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4.5"
                        android:scaleType="fitXY"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/shorts4"
                        android:layout_width="180dp"
                        android:layout_height="350dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4.5"
                        android:scaleType="fitXY"
                        tools:srcCompat="@tools:sample/avatars" />
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/shorts_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/shorts_youtuber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="벡스"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/shorts_profile"
                    app:layout_constraintTop_toTopOf="@id/shorts_profile" />

                <TextView
                    android:id="@+id/subscribe_judge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="구독"
                    android:textColor="@android:color/red"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/shorts_youtuber"
                    app:layout_constraintStart_toEndOf="@+id/shorts_youtuber" />

                <TextView
                    android:id="@+id/shorts_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1분 전"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/shorts_youtuber"
                    app:layout_constraintTop_toBottomOf="@+id/shorts_youtuber" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:layout_width="7dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/show_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/good"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/good"
                    app:layout_constraintLeft_toLeftOf="@id/shorts_profile"
                    app:layout_constraintTop_toBottomOf="@id/shorts_profile" />

                <TextView
                    android:id="@+id/good_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1,000,000,000"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/good"
                    app:layout_constraintStart_toEndOf="@id/good" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/bad"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/bad"
                    app:layout_constraintBottom_toBottomOf="@id/good_cnt"
                    app:layout_constraintStart_toEndOf="@id/good_cnt" />

                <TextView
                    android:id="@+id/bad_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/bad"
                    app:layout_constraintStart_toEndOf="@id/bad" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/post_profile1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UMC 2차 과제에 관하여"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/post_profile1"
                    app:layout_constraintTop_toTopOf="@id/post_profile1" />

                <TextView
                    android:id="@+id/post_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="벡스, 조회수 1억회, 1분 전"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/post_title"
                    app:layout_constraintTop_toBottomOf="@+id/post_title" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:layout_width="7dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/show_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/post_profile2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/post_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UMC 1차 과제에 관하여"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/post_profile2"
                    app:layout_constraintTop_toTopOf="@id/post_profile2" />

                <TextView
                    android:id="@+id/post_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="벡스, 조회수 1억회, 일주일 전"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/post_title2"
                    app:layout_constraintTop_toBottomOf="@+id/post_title2" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:layout_width="7dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/show_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="5">
        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_home"
            android:scaleType="fitXY"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>
        <ImageButton
            android:id="@+id/btn_shorts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_shorts"
            android:scaleType="fitXY"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>
        <ImageButton
            android:id="@+id/btn_show_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/bnt_upload"
            android:scaleType="fitXY"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"/>
        <ImageButton
            android:id="@+id/btn_subscribe2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_subscribe2"
            android:scaleType="fitXY"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>
        <ImageButton
            android:id="@+id/btn_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_stroe"
            android:scaleType="fitXY"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>


    </LinearLayout>


</LinearLayout>